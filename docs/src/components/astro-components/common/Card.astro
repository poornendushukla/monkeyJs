---
const { id,title, description, icon, borderColor='true' } = Astro.props;
---

<div id={id} class=`max-w-sm rounded-xl overflow-hidden hover:border ${borderColor==='true'?'hover:border-purple-400':'hover:border-yellow-300'} bg-white p-6 `>
  <!-- Icon Section: Separate Row, Positioned at the Top -->
  <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center text-gray-800 mx-auto mb-4 transform hover:scale-110 transition-transform duration-200 ease-in-out">
    <img src={icon}/> <!-- Dynamic icon passed from props -->
  </div>
  
  <!-- Title -->
  <div class="text-center mb-4">
    <h3 class="text-2xl font-semibold text-gray-800">{title}</h3>
  </div>
  
  <!-- Description -->
  <p class="text-gray-600 text-sm opacity-90 text-center">{description}</p>
  
  <!-- Footer with extra action (like a button) -->
  <div class="mt-4 text-center">
    <a href={Astro.props.path} class="inline-block bg-white text-gray-800 border-2 border-gray-300 hover:bg-gray-100 hover:text-gray-900 hover:border-gray-500 font-semibold py-2 px-4 rounded-full transition-all duration-200 ease-in-out">
      Read More
    </a>
  </div>
</div>
