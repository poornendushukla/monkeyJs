---
// Props to accept title, description, and icon as customizable input
const { title, description} = Astro.props;
---

<div class="max-w-sm rounded-xl overflow-hidden bg-white p-6 transform hover:translate-y-2  transition-all duration-300 ease-in-out">
  <!-- Icon Section: Separate Row, Positioned at the Top -->
  <div class="w-16 h-16 bg-white border-2 border-gray-200 rounded-full flex items-center justify-center text-gray-800 shadow-md mx-auto mb-4 transform hover:scale-110 transition-transform duration-200 ease-in-out">
    <img src="/monkey-svg.svg"/> <!-- Dynamic icon class passed from props -->
  </div>
  
  <!-- Title -->
  <div class="text-center mb-4">
    <h3 class="text-2xl font-semibold text-gray-800">{title}</h3>
  </div>
  
  <!-- Description -->
  <p class="text-gray-600 text-sm opacity-90 text-center">{description}</p>
  
  <!-- Footer with extra action (like a button) -->
  <div class="mt-4 text-center">
    <button class="bg-white text-gray-800 border-2 border-gray-300 hover:bg-gray-100 hover:text-gray-900 hover:border-gray-500 font-semibold py-2 px-4 rounded-full transition-all duration-200 ease-in-out">
      Read More
    </button>
  </div>
</div>
